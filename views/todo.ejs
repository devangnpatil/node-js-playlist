<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Todo list</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='/assets/styles.css'>
</head>
<body>
    <h1>My todo list</h1>
    <div id="todo-table">
        <form>
            <input type="text" name="item" placeholder="Add new item.." required="required" />
            <button type="submit">Add Item</button>
        </form>
        <ul>
            <% todos.forEach(function(item){  %>
                <li data-attr="<%= item.id %>"><%= item.item %></li>
            <% }); %>
        </ul>
    </div>
    <script src='https://code.jquery.com/jquery-3.4.0.min.js'></script>
    <script src='/assets/todo-list.js'></script>
</body>
</html>
